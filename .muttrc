# A basic .muttrc for use with Gmail
source "gpg -d ~/.passwords.gpg |"
# Change the following six lines to match your Gmail account details

set imap_user = "aura.emil@gmail.com"


set smtp_url = "smtp://aura.emil@gmail.com@smtp.gmail.com:587/"


set from = "aura.emil@gmail.com"

set realname = "Emil Aura"

# Change the following line to a different editor you prefer.

set editor = "vim"

# Basic config, you can leave this as is

set folder = "imaps://imap.gmail.com:993"

set spoolfile = "+INBOX"

set imap_check_subscribed

set hostname = gmail.com

set mail_check = 5

set timeout = 300

set imap_keepalive = 300

set postponed = "+[Gmail]/Utkast"

set record = "+[Gmail]/Skickade mail"

set header_cache=~/.mutt/cache/headers

set message_cachedir=~/.mutt/cache/bodies

set certificate_file=~/.mutt/certificates

set move = no

set include

set sort = 'threads'

set auto_tag = yes

set beep_new = yes

hdr_order Date From To Cc

auto_view text/html

bind editor <Tab> complete-query

bind editor ^T complete

bind editor <space> noop

# Gmail-style keyboard shortcuts

macro index,pager y "<enter-command>unset trash\n <delete-message>" "Gmail archive message"

macro index,pager d "<enter-command>set trash=\"imaps://imap.googlemail.com/[Gmail]/Papperskorgen\"\n <delete-message>" "Gmail delete message"

macro index,pager gl "<change-folder>"

macro index,pager gi "<change-folder>=INBOX<enter>" "Go to inbox"

macro index,pager ga "<change-folder>=[Gmail]/Alla mail<enter>" "Go to all mail"

macro index,pager gs "<change-folder>=[Gmail]/Stjärnmärkta<enter>" "Go to starred messages"

macro index,pager gd "<change-folder>=[Gmail]/Utkast<enter>" "Go to drafts"

macro index,pager gt "<change-folder>=[Gmail]/Skickade mail<enter>" "Go to sent mail"

macro pager cb <pipe-entry>'urlview'<enter> 'Follow links with urlview' 

bind index G imap-fetch-mail

bind index <tab>    sync-mailbox
source ~/.mutt-colors-solarized-dark-16.muttrc  
