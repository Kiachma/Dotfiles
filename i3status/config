# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        color_good = "#cee318"
        color_degraded ="#ff9f00"
        color_bad = "#ff00a0"
        interval = 5
}

order += "cpu_usage"
order += "disk /"
order += "load"
order += "ethernet enp2s0"
order += "volume master"
order += "tztime local"



ethernet enp2s0 {
        # if you use %speed, i3status requires root privileges
        format_up = " %speed"
        format_down = " down"
}

tztime local {
        format = " %d.%m.%Y  %H:%M"
}

load {
        format = " %1min"
}

disk "/" {
        format = " %avail"
}

cpu_usage {
	format = " %usage"
}

volume master {
        format = " %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
